" Specify a directory for plugins
" - For Neovim: ~/.local/share/nvim/plugged
" - Avoid using standard Vim directory names like 'plugin'

" Download and install automatically
if empty(glob('~/.vim/autoload/plug.vim'))
  silent !curl -fLo ~/.vim/autoload/plug.vim --create-dirs
    \ https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
  autocmd VimEnter * PlugInstall --sync | source $MYVIMRC
endif

call plug#begin('~/.vim/plugged')
source ~/data/dotfiles/vimrc/plugins/tagbar_vimrc
source ~/data/dotfiles/vimrc/plugins/nerdtree_vimrc
source ~/data/dotfiles/vimrc/plugins/plantuml_syntax_vimrc
source ~/data/dotfiles/vimrc/plugins/ctrlp_vimrc
Plug 'airblade/vim-gitgutter'
source ~/data/dotfiles/vimrc/plugins/vim_airline_vimrc
source ~/data/dotfiles/vimrc/plugins/vim_hardtime_vimrc
Plug 'tpope/vim-fugitive'
Plug 'tpope/vim-sleuth'
Plug 'tpope/vim-surround'
Plug 'tpope/vim-unimpaired'
Plug 'tpope/vim-commentary'
Plug 'tpope/vim-markdown'
Plug 'tpope/vim-repeat'
source ~/data/dotfiles/vimrc/plugins/ultisnips_vimrc
source ~/data/dotfiles/vimrc/plugins/ycm_vimrc

" Colorschemes
Plug 'sonph/onehalf', {'rtp': 'vim/'}
Plug 'NLKNguyen/papercolor-theme'
Plug 'Yggdroot/duoduo'
" Initialize plugin system
call plug#end()

source ~/data/dotfiles/vimrc/colorschemes/onehalf_vimrc
" source ~/data/dotfiles/vimrc/colorschemes/duoduo_papercolor_vimrc
source ~/data/dotfiles/vimrc/plugins/default_vimrc

